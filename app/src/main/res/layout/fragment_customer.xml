<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <!--WallPaper-->
    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="150dp">

                <ImageView
                    android:id="@+id/btno12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/colorWhite"
                    android:src="@drawable/userr"
                    android:text=" รับซื้อยาง "
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/h2" />

                <TextView
                    android:gravity="center"
                    android:background="#82fa88e1"
                    android:padding="5dp"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/h2"
                    android:text="ข้อมูลส่วนตัว"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="150dp">

                <ImageView
                    android:id="@+id/btno13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textView6"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/colorWhite"
                    android:src="@drawable/money1"
                    android:text=" รับซื้อยาง "
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/h2" />

                <TextView
                    android:gravity="center"
                    android:background="#82fa88e1"
                    android:padding="5dp"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/h2"
                    android:text="เช็คราคายาง"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6" />


            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="150dp">

                <ImageView
                    android:id="@+id/btno14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textView7"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/colorWhite"
                    android:src="@drawable/moneye"
                    android:text=" รับซื้อยาง "
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/h2" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="#82fa88e1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="เงินฝาก"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/h2" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="150dp">

                <ImageView
                    android:id="@+id/btno1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textView8"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/colorWhite"
                    android:src="@drawable/disc"
                    android:text=" รับซื้อยาง "
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/h2" />

                <TextView
                    android:gravity="center"
                    android:background="#82fa88e1"
                    android:padding="5dp"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/h2"
                    android:text="ข้อมูลการขาย"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8" />


            </RelativeLayout>


        </LinearLayout>



    </LinearLayout>









</RelativeLayout>